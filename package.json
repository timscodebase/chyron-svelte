{
  "name": "chyron-svelte",
  "version": "0.8.2",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run prepack",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "prepack": "svelte-kit sync && svelte-package && cp src/lib/Chyron/styles.css dist/styles.css && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check-all": "biome check .",
    "check-all:fix": "biome check --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "dev:all": "concurrently \"npm run dev\" \"npm run storybook\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "files": ["dist", "!dist/**/*.test.*", "!dist/**/*.spec.*"],
  "sideEffects": ["**/*.css"],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@chromatic-com/storybook": "4.0.0-next.8",
    "@storybook/addon-docs": "9.0.0-rc.4",
    "@storybook/addon-svelte-csf": "^5.0.7",
    "@storybook/addon-vitest": "9.0.0-rc.4",
    "@storybook/blocks": "^8.6.14",
    "@storybook/svelte": "9.0.0-rc.4",
    "@storybook/sveltekit": "9.0.0-rc.4",
    "@storybook/test": "^8.6.14",
    "@sveltejs/adapter-static": "^3.0.9",
    "@sveltejs/kit": "^2.21.1",
    "@sveltejs/package": "^2.3.11",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@types/node": "^24.0.3",
    "@testing-library/svelte": "^4.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@vitest/browser": "^3.1.4",
    "concurrently": "^8.0.0",
    "@vitest/coverage-v8": "^3.1.4",
    "playwright": "^1.52.0",
    "publint": "^0.3.12",
    "storybook": "9.0.0-rc.4",
    "svelte": "^5.33.1",
    "svelte-check": "^4.2.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  },
  "keywords": ["svelte"],
  "packageManager": "pnpm@10.8.0+sha512.0e82714d1b5b43c74610193cb20734897c1d00de89d0e18420aebc5977fa13d780a9cb05734624e81ebd81cc876cd464794850641c48b9544326b5622ca29971",
  "overrides": {
    "storybook": "$storybook"
  },
  "dependencies": {
    "badge-maker": "^5.0.1",
    "gsap": "^3.13.0",
    "iconify-icon": "^3.0.0"
  }
}
